{
  "name": "modsaber-installer",
  "version": "1.4.0-beta.6",
  "description": "Beat Saber Mod Installer - Powered by Electron",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "dependencies": {
    "adm-zip": "^0.4.13",
    "electron-is-dev": "^1.0.1",
    "electron-log": "^3.0.1",
    "electron-store": "^2.0.0",
    "electron-updater": "^4.0.6",
    "file-type": "^10.7.1",
    "glob": "^7.1.3",
    "mkdirp": "^0.5.1",
    "node-fetch": "^2.3.0",
    "rimraf": "^2.6.3",
    "treeify": "^1.1.0",
    "uuid": "^3.3.2",
    "winreg": "^1.2.4"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.7.1",
    "@lolpants/bulma": "^0.7.2",
    "@types/mousetrap": "^1.6.1",
    "@types/node": "^10.12.21",
    "@types/react": "^16.8.2",
    "@types/react-dom": "^16.8.0",
    "@types/react-highlight": "^0.12.1",
    "@types/react-redux": "^7.0.1",
    "@types/redux-logger": "^3.0.6",
    "@types/semver": "^5.5.0",
    "@types/uuid": "^3.4.4",
    "cross-env": "^5.2.0",
    "electron": "^4.0.4",
    "electron-builder": "^20.38.5",
    "mousetrap": "^1.6.2",
    "prettier": "^1.16.4",
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "react-highlight": "^0.12.0",
    "react-konami-code": "^1.4.0",
    "react-markdown": "^4.0.6",
    "react-redux": "^6.0.0",
    "react-scripts": "^2.1.3",
    "redux": "^4.0.1",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.3.0",
    "remark-kbd": "^1.0.18",
    "semver": "^5.6.0",
    "terser": "3.14.1",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^3.6.0",
    "typescript": "^3.3.1"
  },
  "scripts": {
    "electron": "electron .",
    "dev": "electron . --debug",
    "start": "npm run start-react",
    "start-react": "cross-env BROWSER=none react-scripts start",
    "build-react": "cross-env GENERATE_SOURCEMAP=true react-scripts build",
    "pack-electron": "electron-builder -c.extraMetadata.main=build/electron.js --dir",
    "build-electron": "electron-builder -c.extraMetadata.main=build/electron.js --win",
    "ship-electron": "electron-builder -c.extraMetadata.main=build/electron.js --win -p always",
    "pack": "npm run build-react && npm run pack-electron",
    "build": "npm run build-react && npm run build-electron",
    "ship": "npm run build-react && npm run ship-electron",
    "lint-electron": "eslint --color --ext .js public/",
    "lint-react": "tslint -c tslint.json 'src/**/*.{ts,tsx}'",
    "lint": "npm run lint-react && npm run lint-electron"
  },
  "build": {
    "appId": "com.jackbaron.modsaber-installer",
    "productName": "ModSaber Installer",
    "copyright": "Copyright Â© 2018 ${author}",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "include": "installer/installer.nsh"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icons/icon.png",
      "publish": [
        {
          "provider": "github",
          "releaseType": "draft"
        }
      ]
    },
    "protocols": {
      "name": "ModSaber Installer Protocol",
      "schemes": [
        "modsaber"
      ]
    },
    "fileAssociations": [
      {
        "ext": "saber",
        "name": "Saber",
        "description": "Custom Saber",
        "icon": "build/icons/saber.ico"
      },
      {
        "ext": "avatar",
        "name": "Avatar",
        "description": "Custom Avatar",
        "icon": "build/icons/avatar.ico"
      },
      {
        "ext": "plat",
        "name": "Platform",
        "description": "Custom Platform",
        "icon": "build/icons/platform.ico"
      },
      {
        "ext": "bmap",
        "name": "Beatmap",
        "description": "Custom Song",
        "icon": "build/icons/bmap.ico"
      },
      {
        "ext": "bplist",
        "name": "Playlist",
        "description": "Beat Saber Playlist",
        "icon": "build/icons/bplist.ico"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lolPants/modsaber-installer.git"
  },
  "author": "Jack Baron <jackmbaron@gmail.com> (https://www.jackbaron.com)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lolPants/modsaber-installer/issues"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    "electron >3.0.0"
  ]
}
